<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/poster_iv"
        android:layout_width="84dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/placeholder"
        app:tint="@color/transparent_black" />

    <TextView
        android:id="@+id/tracks_name"
        style="@style/FragmentPlayerText.TracksName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/poster_iv"
        tools:text="Name for song, maybe short maybe long" />

    <TextView
        android:id="@+id/artists_name"
        style="@style/FragmentPlayerText.ArtistsName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tracks_name"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/poster_iv"
        tools:text="Artist's name" />

    <ImageButton
        android:id="@+id/play_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/artists_name"
        android:layout_alignBottom="@id/poster_iv"
        android:layout_toEndOf="@id/poster_iv"
        android:background="@android:color/transparent"
        android:src="@drawable/play" />

    <ImageButton
        android:id="@+id/pause_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/artists_name"
        android:layout_alignBottom="@id/poster_iv"
        android:layout_toEndOf="@id/play_button"
        android:background="@android:color/transparent"
        android:src="@drawable/pause" />

    <ImageButton
        android:id="@+id/previous_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/artists_name"
        android:layout_alignBottom="@id/poster_iv"
        android:layout_toEndOf="@id/pause_button"
        android:background="@android:color/transparent"
        android:src="@drawable/previous" />

    <ImageButton
        android:id="@+id/next_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/artists_name"
        android:layout_alignBottom="@id/poster_iv"
        android:layout_toEndOf="@id/previous_button"
        android:background="@android:color/transparent"
        android:src="@drawable/next" />
</RelativeLayout>